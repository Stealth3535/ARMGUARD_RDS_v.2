# ArmGuard Testing Environment - Environment Variables
# Copy this file to .env and configure as needed

# =============================================================================
# Django Application Settings
# =============================================================================
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,nginx,armguard-app

# =============================================================================
# Database Settings (PostgreSQL)
# =============================================================================
POSTGRES_DB=armguard
POSTGRES_USER=armguard_user
POSTGRES_PASSWORD=secure-database-password-change-this
POSTGRES_HOST=armguard-db
POSTGRES_PORT=5432
DATABASE_URL=postgres://armguard_user:secure-database-password-change-this@armguard-db:5432/armguard

# =============================================================================
# Redis Settings
# =============================================================================
REDIS_URL=redis://armguard-redis:6379/0

# =============================================================================
# Monitoring Settings
# =============================================================================
# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin-password-change-this
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin-password-change-this
GF_USERS_ALLOW_SIGN_UP=false
GF_SERVER_ROOT_URL=http://localhost:3000

# Prometheus
PROMETHEUS_RETENTION_TIME=15d

# =============================================================================
# Alerting Settings
# =============================================================================
# Slack (optional)
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_SLACK_CHANNEL=#armguard-alerts

# Email (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=smtp-password
ALERT_EMAIL_TO=admin@example.com

# =============================================================================
# Testing Settings
# =============================================================================
# Selenium
SELENIUM_TIMEOUT=20
SELENIUM_IMPLICIT_WAIT=10
SELENIUM_BROWSER=chrome

# Locust
LOCUST_USERS=50
LOCUST_SPAWN_RATE=5
LOCUST_RUN_TIME=5m

# OWASP ZAP
ZAP_API_KEY=your-zap-api-key

# =============================================================================
# Application URLs (for testing)
# =============================================================================
APP_URL=https://nginx
INTERNAL_APP_URL=http://armguard-app:8000

# =============================================================================
# Security Settings
# =============================================================================
# CSRF
CSRF_TRUSTED_ORIGINS=https://localhost,https://nginx

# Session
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
