# ArmGuard Docker Testing - Network Security Environment Variables
#
# Copy this to .env and customize for your deployment environment
#
# ==========================================================================
# NETWORK SECURITY CONFIGURATION
# ==========================================================================

# Enable network-based access control (true/false)
NETWORK_SECURITY_ENABLED=true

# LAN Port for sensitive operations (transactions, registration, admin)
LAN_PORT=8443

# WAN Port for status checking operations only
WAN_PORT=443

# Force strict network security enforcement
FORCE_NETWORK_SECURITY=true

# ==========================================================================
# DJANGO APPLICATION SETTINGS
# ==========================================================================

# Django secret key (change in production)
DJANGO_SECRET_KEY=testing-secret-key-change-in-production-environment

# Debug mode (false for production)
DJANGO_DEBUG=false

# Allowed hosts (add your domain names)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,armguard.local

# CSRF trusted origins (include both LAN and WAN ports)
CSRF_TRUSTED_ORIGINS=https://localhost,https://armguard.local,https://localhost:8443,https://armguard.local:8443

# ==========================================================================
# DATABASE CONFIGURATION
# ==========================================================================

# PostgreSQL database settings
USE_POSTGRESQL=true
DB_NAME=armguard_db
DB_USER=armguard_user
DB_PASSWORD=armguard_secure_password_change_me
DB_HOST=armguard-db
DB_PORT=5432

# ==========================================================================
# REDIS CACHE CONFIGURATION
# ==========================================================================

USE_REDIS_CACHE=true
REDIS_URL=redis://armguard-redis:6379/1

# ==========================================================================
# SECURITY SETTINGS
# ==========================================================================

# Session settings
SESSION_COOKIE_AGE=3600
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# CSRF settings
CSRF_COOKIE_SECURE=true
CSRF_COOKIE_HTTPONLY=true
CSRF_COOKIE_SAMESITE=Strict

# Disable public registration (admin only)
ALLOW_PUBLIC_REGISTRATION=false

# ==========================================================================
# MONITORING CONFIGURATION
# ==========================================================================

# Grafana admin credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=armguard_grafana_change_me

# ==========================================================================
# DOCKER REGISTRY CONFIGURATION
# ==========================================================================

# Private registry (optional)
# REGISTRY=your-registry.com
# IMAGE_TAG=latest

# ==========================================================================
# SSL CERTIFICATE CONFIGURATION
# ==========================================================================

# SSL certificate paths (mounted in docker-compose)
SSL_CERT_PATH=/etc/nginx/ssl/armguard.crt
SSL_KEY_PATH=/etc/nginx/ssl/armguard.key

# Generate self-signed certificates for testing
GENERATE_SELF_SIGNED=true